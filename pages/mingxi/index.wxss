.container {
  width: 100%;
  background-color: #f2f2f2;
}


.no-order {
  width: 100%;
  position: absolute;
  bottom: 0;
  top: 88rpx;
  left: 0;
  right: 0;
  text-align: center;
  padding-top: 203rpx;
  background-color: #f2f2f2;
}

.no-order-img {
  width: 81rpx;
  height: 96rpx;
  margin-bottom: 31rpx;
}

.no-order .text {
  font-size: 28rpx;
  color: #999;
  text-align: center;
}

.order-list {
  width: 100%;
  margin-top: 20rpx;
}

.order-list .a-order {
  width: 100%;
  background-color: #fff;
  margin-bottom: 2rpx;
  display: flex;
  padding: 20rpx 0;
  font-size: 24rpx;
  color: #333333;
}

.order-list .a-order .photo {
  width: 120rpx;
  height: 120rpx;
  margin-left: 20rpx;
  margin-right: 30rpx;
}
.order-list .a-order .order-no{
  margin: 10rpx 0;
}
.order-list .a-order .order-info{
  width: 600rpx;
  position: relative;
}
.order-list .a-order .custom{
  color: #333333;
  font-size: 30rpx;
  font-weight: bold;
  margin: 20rpx 0 10rpx 0;
}
.order-list .a-order  .order-date{
  display: flex;
  justify-content: space-between;
  color: #707070;
}
.order-list .a-order .order-status {
  position: absolute;
  height: 50rpx;
  line-height: 50rpx;
  width: 100rpx;
  text-align: center;
  right: 30rpx;
  top: 50%;
  margin-top: -25rpx;
  border-radius: 4rpx;
  color: #fe0000;
}

.order-list  .red {
  color: #e64340;
}

