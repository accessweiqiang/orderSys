/* pages/shangpin/index.wxss */

.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: #fff;
  height: 90rpx;
  z-index: 10;
  box-shadow: 0px 2px 3px #aaa;
}

.coupons-scroll {
  white-space: nowrap;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
}

.coupons-item {
  min-width: 150rpx;
  margin-left: 20rpx;
  box-sizing: content-box;
  font-size: 32rpx;
  overflow: hidden;
  display: inline-block;
  font-weight: bold;
}

.coupons-item.active {
  color: #e32910;
}

.no-data {
  width: 100%;
  position: absolute;
  bottom: 0;
  top: 400rpx;
  left: 0;
  right: 0;
  text-align: center;
  background-color: #f2f2f2;
}

.list {
  width: 100%;
  margin-top: 100rpx;
  margin-bottom: 80rpx;
  height: 990rpx;
}

.item-info {
  max-width: 45%;
}

.list .item {
  width: 100%;
  margin-bottom: 2rpx;
  display: flex;
  padding: 20rpx 0;
  font-size: 24rpx;
  position: relative;
}

.list .item .photo {
  width: 200rpx;
  height: 200rpx;
  margin-left: 20rpx;
  margin-right: 30rpx;
}

.list .item .name {
  font-size: 32rpx;
  font-weight: bold;
}

.list .item .price {
  margin: 20rpx 0;
  font-size: 28rpx;
}

.list .item  .date, .list .item .number {
  color: #666;
}

.list .item .number {
  margin-bottom: 20rpx;
}

.edit, .delete {
  position: absolute;
  height: 50rpx;
  line-height: 50rpx;
  width: 100rpx;
  text-align: center;
  right: 30rpx;
  top: 50%;
  margin-top: -25rpx;
  border-radius: 4rpx;
  background: #fe0000;
  color: #fff;
}

.delete {
  background: url(https://www.wendin.cn/public/images/icon/delete.png) no-repeat;
  top: 10rpx;
  right: 30rpx;
  margin: 0;
  display: block;
  background-size: contain;
  width: 24rpx;
  height: 24rpx;
}

.btn-wrap {
  position: fixed;
  bottom: 0;
  width: 100%;
  text-align: center;
  border-top: 1px solid #e32910;
  background: #fff;
}

.btn-wrap::after {
  content: '';
  position: absolute;
  height: 80rpx;
  width: 2rpx;
  left: 50%;
  top: 0;
  display: block;
  background: #e32910;
}

.btn {
  width: 50%;
  display: inline-block;
  height: 80rpx;
  line-height: 80rpx;
}

.btn image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  position: relative;
  top: -2rpx;
}
