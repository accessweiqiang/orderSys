/* pages/shangpin/index.wxss */


.coupons-scroll {
  white-space: nowrap;
  width: 100%;
  background-color: #fff;
  height: 90rpx;
  line-height: 90rpx;
}

.coupons-item {
  min-width: 150rpx;
  margin-left: 20rpx;
  box-sizing: content-box;
  font-size: 32rpx;
  overflow: hidden;
  display: inline-block;
  font-weight: bold;
}
.coupons-item.active{
  color: #e32910;
}

.no-data {
  width: 100%;
  position: absolute;
  bottom: 0;
  top: 400rpx;
  left: 0;
  right: 0;
  text-align: center;
  background-color: #f2f2f2;
}




.list {
  width: 100%;
  margin-top: 20rpx;
  margin-bottom: 80rpx;
}
.item-info{
 max-width:45%; 
}
.list .item {
  width: 100%;
  margin-bottom: 2rpx;
  display: flex;
  padding: 20rpx 0;
  font-size: 24rpx;
  position: relative;
}

.list .item .photo {
  width: 200rpx;
  height: 200rpx;
  margin-left: 20rpx;
  margin-right: 30rpx;
}
.list .item .name{
  font-size: 32rpx;
  font-weight: bold;
}
.list .item .price{
  margin: 20rpx 0;
  font-size: 28rpx;
}

.list .item  .date,.list .item .number{
  color: #666666;
}
.list .item .number{
  margin-bottom: 20rpx;
}
.edit,.delete {
  position: absolute;
  height: 50rpx;
  line-height: 50rpx;
  width: 100rpx;
  text-align: center;
  right: 30rpx;
  top: 50%;
  margin-top: -25rpx;
  border-radius: 4rpx;
  background: #fe0000;
  color: #fff;
}
.delete{
  background: url(https://www.wendin.cn/public/images/icon/delete.png) no-repeat;
  top: 10rpx;
  right: 30rpx;
  margin: 0;
  display: block;
  background-size: contain;
  width: 24rpx;
  height: 24rpx;
}

.add-btn{
  position: fixed;
  bottom:0;
  width: 100%;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  border-top: 1px solid #e32910; 
  background: #fff;
}
.add-btn image {
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
  position: relative;
  top: -4rpx;
}