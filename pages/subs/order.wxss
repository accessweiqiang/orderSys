.clearfix:before, .clearfix:after {
  content: "";
  display: block;
}
.clearfix:after {
  clear: both;
}
.clearfix {
  zoom: 1;
}
.wrap{width: 100%;height: 100%;background: #fff;}
.header{width: 100%;height: 100px;background: url(/assets/images/obaner1.png) no-repeat center;background-size:100% 100%;}
.order-a{width: 100%;}
.order-a-1{padding: 20px 4%;font-weight: bold;}
.borline{width: 100%;height: 8px;background: #eee;}
.order-b{width: 100%;}
.order-b-1{padding: 15px 4%;}
.order-b-le{float: left;}
.order-b-le image{vertical-align: middle;width: 60px;height: 60px;}
.order-b-le text{margin-left: 20px;}
.order-b-ri{margin-right: 5px;float: right;margin-top: 17px;}
.order-b-2{padding: 15px 4%}
.order-b-2-con{margin-bottom: 10px;}
.order-b-2-con text{width: 33.3%;display: inline-block;}
.order-b-2-con text:nth-child(1){width: 40%;}
.order-b-2-con text:nth-child(2){width: 30%;text-align: center;color: #ff0000;}
.order-b-2-con text:nth-child(3) {text-align: right;width: 30%;}
.order-b-3{padding: 10px 4%;border-bottom: 1px solid #ddd;font-size: 16px;}
.order-b-3-c{float: left;}
.order-b-3-d{float: right;color: #ff0000;}
.order-b-3-e{float: right;text-align: center;width: 20%;height: 30px;line-height: 30px;color: #fff;background: #ff0000;border-radius: 5px;}