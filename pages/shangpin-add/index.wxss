.container{
    width: 100%;
    background-color: #fff;
}
.banner image{
height: 400rpx;
width: 100%;
}
.info{
    width: 100%;
    background-color: #fff;
    margin-bottom: 60rpx;
    padding-bottom: 60rpx;
}
.info .row-box{
    width: 100%;
    height: 90rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
    font-size: 28rpx;
}
.info .row-box .row-label{
  width: 120rpx;
  padding-left: 20rpx;
  font-weight: bold;
}
.info input,.info textarea{
  width: 620rpx;
  display: block;
  line-height: 45rpx;
}
.status{
  color: #fff;
  background: #fe0000;
  width: 90rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 22rpx;
  display: inline-block;
  border-radius: 4rpx;
  text-align: center;
}

.intro-box{
  height: 120rpx;
  align-items:  flex-start;
}
.intro{
  line-height: 45rpx;
  padding: 20rpx;
}

.operate {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 28rpx;
  text-align: center;
  color: #fff;
  background: #e32910;
  position: fixed;
  bottom: 0;
}
