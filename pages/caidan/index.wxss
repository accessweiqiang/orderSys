/* pages/caidan/index.wxss */
.container{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.photo{
  height: 160rpx;
  width: 100%;
  background: url(https://www.wendin.cn/public/images/page/shangjia.png) no-repeat;
  background-size: cover;
}
.left-block{
  background: #f5f5f5;
  position: fixed;
  left: 0;
  width: 240rpx;
  top: 160rpx;
  bottom: 0;
  display: flex;
  flex-direction: column;
}
.left-block .item{
  padding: 30rpx 20rpx;
  line-height: 1.7em;
  position: relative;
  color: #333333;
}
.left-block .item.active{
color: #e32910;
background: #fff;
}
.left-block .item.active::before{
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
border-left: 6rpx #e32910 solid;
}
.right-block{
  background: #fff;
  position: fixed;
  left: 240rpx;
  right: 0;
  top:160rpx;
  bottom: 0;
  padding: 0 30rpx;
}
.list .item{
  display: flex;
  font-size: 28rpx;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #bbbbbb;
  margin-top: 30rpx;
}
.list .item:last-child{
  border: none
}
.list .item .photo{
  width: 140rpx;
  height: 140rpx;
  border-radius: 6rpx;
  overflow: hidden; 
  margin-right: 20rpx;
}

.list .item .name{
  font-size: 32rpx;
  font-weight: bold;
  margin: 20rpx 0;
}


.no-data{
  width: 100%;
  text-align: center;
  color: #666666;
  margin-top: 60rpx;
}
.go-add{
  margin-top:20rpx;
  text-decoration: underline;
  color: #e32910;
}